<root main_tree_to_execute="AvoidIfExcuseMeTree">
    <BehaviorTree ID="AvoidIfExcuseMeTree">
        <Fallback name="ExcuseOrStandFallback">
            <Sequence name="CheckExcuseMeSequence">
                <RobotSays agent_id="{id}" message="3"/>
                <AvoidRobot agent_id="{id}" time_step="{dt}" />
            </Sequence>
            <Sequence name="StandInGroupSequence">
                <Inverter>
                    <RobotSays agent_id="{id}" message="3"/>
                </Inverter>
                <MakeGesture agent_id="{id}" message="0"/>
            </Sequence>
        </Fallback>
    </BehaviorTree>
</root>