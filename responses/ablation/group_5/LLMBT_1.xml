<root main_tree_to_execute='HumanAvoidRobotTree'>
<BehaviorTree ID='HumanAvoidRobotTree'>
    <Fallback name='AvoidFallback'>
        <Sequence name='AvoidRobotSequence'>
            <RobotSays agent_id='{id}' message='3'/>
            <AvoidRobot agent_id='{id}' time_step='{dt}'/>
            <RobotMoved agent_id='{id}'/> <!-- Continue avoiding until the robot moves -->
        </Sequence>
        <Sequence name='StandAndChatSequence'>
            <MakeGesture agent_id='{id}' message='0'/> <!-- No gesture, implying standing and chatting -->
        </Sequence>
    </Fallback>
</BehaviorTree>
</root>