
<root main_tree_to_execute='Human3AvoidRobotTree'>
    <BehaviorTree ID='Human3AvoidRobotTree'>
        <Fallback name='AvoidOrChatFallback'>
            <Sequence name='AvoidRobotSequence'>
                <RobotSays agent_id='{id}' message='4'/>
                <AvoidRobot agent_id='{id}' time_step='{dt}'/>
                <GiveWaytoRobot agent_id='{id}' time_step='{dt}'/>
                <RobotMoved agent_id='{id}'/>
            </Sequence>
            <Sequence name='StandAndChatSequence'>
                <MakeGesture agent_id='{id}' message='0'/>
            </Sequence>
        </Fallback>
    </BehaviorTree>
</root>