<root main_tree_to_execute='GiveWayOrStandTree'>
    <BehaviorTree ID='GiveWayOrStandTree'>
        <Fallback name='RobotProximityFallback'>
            <Sequence name='GiveWaySequence'>
                <RobotSays agent_id='{id}' message='4' />
                <IsRobotNearby agent_id='{id}' distance='1.0' />
                <GiveWaytoRobot agent_id='{id}' time_step='{dt}' />
            </Sequence>
            <Sequence name='StandSequence'>
                <SetBlackboard output_key='agentid' value='{id}' />
                <SetBlackboard output_key='timestep' value='{dt}' />
                <!-- Perform standing activity here if needed, omitted for simplicity -->
            </Sequence>
        </Fallback>
    </BehaviorTree>
</root>